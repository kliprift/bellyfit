<div id="clearance" class="sign-up">
  <h2><%= t(".update_user") %></h2>

	<%= form_for(@user) do |form| %>
		<div class="text-field">
		  <%= form.label :name %>
		  <%= form.text_field :name %>
		</div>

		<div class="text-field">
		  <%= form.label :age %>
		  <%= form.text_field :age %>
		</div>

		<div class="text-field">
		  <%= form.label :gender %>
		  <%= form.text_field :gender %>
		</div>

		<div class="text-field">
		  <%= form.label :description %>
		  <%= form.text_field :description %>
		</div>

		<div class="text-field">
		  <%= form.label :contact_detail %>
		  <%= form.text_field :contact_detail %>
		</div>

		<div class="text-field">
		  <%= form.label :location_description %>
		  <%= form.text_field :location_description %>
		</div>

		<div class="submit-field">
		  <%= form.submit %>
		</div>
	<% end %>

</div>
