<div class="row">
	<div class="col-md-3">
		<ul class="sidebar-list">
			<li class="sidebar-item"><%= link_to "Your Listing", facilities_path, class: "sidebar-link active" %></li>
			<li class="sidebar-item"><%= link_to "Your Bookings", facilities_path, class: "sidebar-link" %></li>
		</ul> 
	</div>
	<div class="col-md-9">
		<div class="panel panel-default">
			<div class="panel-heading">
				Facilities Listings
			</div>
			<div class="panel-body">
				
				<% @facilities.each do |facility| %>
					<div class="row">
						<div class="col-md-2">
							<%= image_tag facility.photos[0].image.url(:thumb) if facility.photos.length > 0 %>
						</div>		
						<div class="col-md-7">
							<h4><%= facility.listing_name %></h4>
						</div>		
						<div class="col-md-3 right">
							<%= link_to "Update", edit_facility_path(facility), class: "btn btn-primary" %>
						</div>		
					</div>
					<hr>
				<% end %>

			</div>
		</div>
	</div>
</div>