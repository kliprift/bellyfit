<div class="row">
    <div class="col-md-9">
        <div class="panel panel-default">
            <div class="panel-heading">
                Facilities Listings
            </div>
            <div class="panel-body">
                
                <% @facilities.each do |facility| %>
                    <div class="row">
                        <div class="col-md-2">
                            
                        </div>        
                        <div class="col-md-7">
                            <h4><%= facility.location_name %></h4>
                            <%= image_tag (facility.avatars[0].thumb.url) if facility.avatars[0] != nil %>
                        </div>        
                        <div class="col-md-3 right">
                    
                            <%= link_to "View", user_facility_path(current_user.id, facility.id), class: "btn btn-primary" %>

                                <%= link_to "Book", new_facility_booking_path(facility.id), class: "btn btn-success" %>

                        </div>        
                    </div>
                    <hr>
                <% end %>
            </div>
        </div>
    </div>
</div>